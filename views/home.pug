doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Broom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12.0/mvp.css")
    body
        header
            h1 Broom
        main
            h2 Welcome to Broom
            ul 
            form#message
                input(type="text", placeholder="write a msg", required)
                button Send 
            
            form#nickname
                input(type="text", placeholder="set a nick name", required)
                button Save
            
            form#util
                button#broom Broom
                h1 click Broom to clean the chat log
        script(src="/public/js/app.js")