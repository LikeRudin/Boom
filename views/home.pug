doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Broom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12.0/mvp.css")
    body
        header
            h1 Broom
        main
            div#welcome
                form
                    input(type="text",required, placeholder="room name")
                    button Enter Room
            div#room
                h3
                ul 
                form#name
                    input(type="text",required, placeholder="nickname")
                    button Set
                form#msg
                    input(type="text",required, placeholder="message")
                    button Send

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 